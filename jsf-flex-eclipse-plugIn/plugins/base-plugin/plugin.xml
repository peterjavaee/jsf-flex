<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   
   <extension
         point="org.eclipse.ui.views">
      <category
            name="%jsf.flex.plugin.view.category.name"
            id="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn">
      </category>
      <view
            name="%jsf.flex.plugin.view.name"
            icon="icons/sample.gif"
            category="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn"
            class="com.googlecode.jsfflexeclipseplugin.views.JsfFlexASAttributesClassView"
            id="com.googlecode.jsfflexeclipseplugin.views.JsfFlexASAttributesClassView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="%jsf.flex.plugin.commands.category.description"
            id="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.category"
            name="%jsf.flex.plugin.commands.category">
      </category>
      <command
            categoryId="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.category"
            description="%jsf.flex.plugin.commands.showView.description"
            id="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.showView"
            name="%jsf.flex.plugin.commands.showView.name">
      </command>
      <command
            categoryId="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.category"
            description="%jsf.flex.plugin.commands.add.description"
            id="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.add"
            name="%jsf.flex.plugin.commands.add.name">
      </command>
      <command
            categoryId="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.category"
            description="%jsf.flex.plugin.commands.copy.description"
            id="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.copy"
            name="%jsf.flex.plugin.commands.copy.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.googlecode.jsfflexeclipseplugin.commands.handler.JsfFlexAddASAttributesClassHandler"
            commandId="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.add">
            <activeWhen>
                <with variable="activePartId">
                    <equals value="com.googlecode.jsfflexeclipseplugin.views.JsfFlexASAttributesClassView" />
                </with>
            </activeWhen>
      </handler>
      <handler
            class="com.googlecode.jsfflexeclipseplugin.commands.handler.JsfFlexShowViewASAttributesClassHandler"
            commandId="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.showView">
            <activeWhen>
                <with variable="selection">
                     <iterate>
                        <and>
                           <instanceof
                                 value="org.eclipse.wst.xml.core.internal.provisional.document.IDOMElement">
                           </instanceof>
                           <or>
                              <test
                                    property="org.eclipse.core.resources.extension"
                                    value="*.xhtml">
                              </test>
                              <test
                                    property="org.eclipse.core.resources.extension"
                                    value="*.jsp">
                              </test>
                           </or>
                        </and>
                     </iterate>
                  </with>
            </activeWhen>
      </handler>
      <handler
            class="com.googlecode.jsfflexeclipseplugin.commands.handler.JsfFlexCopyASClassAttributeHandler"
            commandId="org.eclipse.ui.edit.copy">
            <activeWhen>
                <with variable="activePartId">
                    <equals value="com.googlecode.jsfflexeclipseplugin.views.JsfFlexASAttributesClassView" />
                </with>
            </activeWhen>
            <enabledWhen>
                <with variable="selection">
                    <count value="+" />
                </with>
            </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.menus.jsfFlexASAttributesClassShowMenu"
               label="%jsf.flex.plugin.menu.show.label"
               mnemonic="%jsf.flex.plugin.menu.show.mnemonic">
            <command
                  commandId="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.showView"
                  id="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.menus.showView"
                  mnemonic="%jsf.flex.plugin.menu.show.command.mnemonic"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with variable="selection">
                     <iterate>
                        <and>
                           <instanceof
                                 value="org.eclipse.wst.xml.core.internal.provisional.document.IDOMElement">
                           </instanceof>
                           <or>
                              <test
                                    property="org.eclipse.core.resources.extension"
                                    value="*.xhtml">
                              </test>
                              <test
                                    property="org.eclipse.core.resources.extension"
                                    value="*.jsp">
                              </test>
                           </or>
                        </and>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:com.googlecode.jsfflexeclipseplugin.views.JsfFlexASAttributesClassView?before=edit">
         <menu
               id="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.menus.jsfFlexASAttributesClassCopyMenu"
               label="%jsf.flex.plugin.menu.copy.label">
            <command
                  commandId="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.copy"
                  id="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.menus.copy"
                  style="push">
                  <visibleWhen>
                    <with variable="activePartId">
                        <equals value="com.googlecode.jsfflexeclipseplugin.views.JsfFlexASAttributesClassView" />
                    </with>
                    <with variable="selection">
                        <count value="+" />
                    </with>
                  </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.commands.showView"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+Shift+J">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.googlecode.jsfflexeclipseplugin.preferences.JsfFlexASAttributesClassPreferencePage"
            id="com.googlecode.jsf-flex-eclipse-plugIn-base-plugIn.preferences.view"
            name="%jsf.flex.plugin.preferences.page.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.googlecode.jsfflexeclipseplugin.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
