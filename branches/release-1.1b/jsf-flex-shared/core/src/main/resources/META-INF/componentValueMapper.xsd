<?xml version="1.0" encoding="UTF-8"?>
<xs:schema 	xmlns:xs="http://www.w3.org/2001/XMLSchema" 
			targetNamespace="http://jsf-flex.googlecode.com" 
			xmlns:compValMapper="http://jsf-flex.googlecode.com"
			elementFormDefault="qualified">
	<xs:annotation>
		<xs:documentation xml:lang="en-US">
			This schema is for componentValueMapper.xml, which is used to fetch Flex component's reflected persistent attribute for server side mapping.
		</xs:documentation>
		<xs:appinfo>
			<associatedXml>componentValueMapper.xml</associatedXml>
			<version>1.1b</version>
		</xs:appinfo>
	</xs:annotation>
	
	<xs:element name="classLists">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="classInfo" maxOccurs="unbounded">
					<xs:complexType>
						<xs:all>
							<xs:element name="className" type="xs:string"></xs:element>
							<xs:element name="nodeList">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="node" maxOccurs="unbounded">
											<xs:complexType>
												<xs:all>
													<xs:element name="htmlType" type="xs:string"></xs:element>
													<xs:element name="attributeList" type="compValMapper:attributeList"></xs:element>
												</xs:all>
											</xs:complexType>
										</xs:element>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
						</xs:all>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	
	<xs:complexType name="attributeList">
		<xs:sequence>
			<xs:element name="attribute" minOccurs="3" maxOccurs="3">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="name">
							<xs:simpleType>
								<xs:restriction base="xs:string">
									<xs:enumeration value="type"></xs:enumeration>
									<xs:enumeration value="value"></xs:enumeration>
									<xs:enumeration value="name"></xs:enumeration>
								</xs:restriction>
							</xs:simpleType>
						</xs:element>
						<xs:element name="value">
							<xs:complexType>
								<xs:sequence>
									<xs:element name="nested" minOccurs="0" maxOccurs="unbounded" type="xs:string"></xs:element>
								</xs:sequence>
								<xs:attribute name="dynamic" type="compValMapper:booleanValue"></xs:attribute>
								<xs:attribute name="nested" type="compValMapper:booleanValue"></xs:attribute>
								<xs:attribute name="append" type="xs:string"></xs:attribute>
							</xs:complexType>
						</xs:element>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
	
	<xs:simpleType name="booleanValue">
		<xs:restriction base="xs:string">
			<xs:enumeration value="true"></xs:enumeration>
			<xs:enumeration value="false"></xs:enumeration>
		</xs:restriction>
	</xs:simpleType>
</xs:schema>